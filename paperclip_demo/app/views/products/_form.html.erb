<%= form_for @product, html: { multipart: true }  do |f| %>
    <p>
      <%= f.label :category_id %><br />
      <%= f.collection_select :category_id, Category.all, :id, :name %>
    </p>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :price %><br />
      <%= f.text_field :price %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
        <%= #f.file_field :photo 
        %>
    </p>
    <p>
      <%= f.label :imgurl %><br />
      <%= f.text_area :imgurl %>
    </p>    
    
    <p><%= f.submit "Submit" %></p>
<% end %>
